  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "fluentd",
      "containers": [
        {
          "name": "fluentd",
          "image": "bprodoehl/log-collector",
          "ports": [],
          "Privileged": "true",
          "volumeMounts": [
            {
              "name": "containers",
              "mountPath": "/var/lib/docker/containers"
            },
            {
              "name": "socket",
              "mountPath": "/var/run/docker.sock"
            }
          ]
        }
      ],
      "volumes": [
        {
          "name": "containers",
          "hostDir": {
            "path": "/var/lib/docker/containers"

          }
        },
        {
          "name": "socket",
          "hostDir": {
            "path": "/var/run/docker.sock"

          }
        }
      ]
    }
