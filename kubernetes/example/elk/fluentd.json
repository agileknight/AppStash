{
  "id": "fluentd",
  "kind": "Pod",
  "apiVersion": "v1beta1",
  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "fluentd",
      "containers": [
        {
          "name": "fluentd",
          "image": "kubernetes/fluentd-elasticsearch",
          "ports": [],
          "Privileged": true,
          "volumeMounts": [
            {
              "name": "containers",
              "mountPath": "/var/lib/docker/containers",
              "readOnly": true
            }
          ]
        }
      ],
      "volumes": [
        {
          "name": "containers",
          "hostDir": {
            "path": "/var/lib/docker/containers"
          }
        }
      ]
    }
  },
  "labels": {
    "name": "fluentd",
    "role": "monitoring"
  }
}